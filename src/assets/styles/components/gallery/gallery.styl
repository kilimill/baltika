.ie
	.gallery
		&__item
			&:before
				opacity .4
			&:after
				opacity .4

.gallery
	z-index 1
	position relative
	height 100%
	padding-top vh(30)
	@media $tovw
		padding-top vw(30)
	.wrapper
		dfv()
		padding-left vh(81)
		padding-right vh(91)
		height 100%
		width 100%
		@media $tovw
			padding-left vw(81)
			padding-right vw(91)
		@media $mobile
			padding 0 vm(20)
			padding-top vm(22)
	&__title
		fontify vh(46) 700 1
		color $white
		align-self center
		margin-top 0
		margin-bottom vh(25)
		@media $tovw
			fontify vw(46) 700 1
			margin-top 0
			margin-bottom vw(25)
	&__items
		height 100%
		width 100%
		position relative
		@media $mobile
			dfv()
	&__item
		position absolute
		@media $mobile
			position static
			width 100%!important
			height vm(255)!important
			margin-bottom vm(20)
		&--big
			width vh(255)
			height vh(255)
			@media $tovw
				width vw(255)
				height vw(255)
		&--small
			width vh(173)
			height vh(173)
			.gallery__item-username
				font-size vw(15)
				line-height vw(18)
			@media $tovw
				width vw(173)
				height vw(173)
			@media $mobile
				.gallery__item-username
					fontify vm(24) 700 vm(30)
		@media $desktop
			&:hover
				&:before
					opacity 0
				&:after
					opacity 0
		&:before
			content ''
			position absolute
			left 0
			top 0
			width 100%
			height 100%
			background #06142E
			mix-blend-mode color
			transition .8s opacity
			@media $mobile
				content none
		&:after
			content ''
			position absolute
			left 0
			top 0
			width 100%
			height 100%
			background #76B4EB
			mix-blend-mode hard-light
			transition .8s opacity
			@media $mobile
				content none
		&:nth-child(1)
			left 0
			top 0
		&:nth-child(2)
			top 44.5%
			left 9%
		&:nth-child(3)
			left 39%
			top 5%
		&:nth-child(4)
			top 56%
			right 8%
		&:nth-child(5)
			top 12%
			right 0%
		img,
		video
			width 100%
			height 100%
			object-fit cover
	&__item-username
		position absolute
		fontify vh(24) 700 vh(30)
		color $white
		right 0
		bottom vh(15)
		right vh(15)
		z-index 1
		@media $tovw
			fontify vw(24) 700 vw(30)
			bottom vw(15)
			right vw(15)
		@media $mobile
			fontify vm(24) 700 vm(30)
			bottom vm(15)
			right vm(15)
	&__btn
		position absolute
		left 43.6%
		bottom 13%
		fontify vh(22) 400 vh(40)
		color rgba(255,255,255,.7)
		width vh(173)
		height vh(47)
		text-align center
		background $t
		overflow hidden
		@media $tovw
			fontify vw(22) 400 vw(40)
			width vw(173)
			height vw(47)
		@media $mobile
			position static
		&:hover
			color #002554
			&:before
				width vh(172)
				height vh(45)
				background-color #fff
				@media $tovw
					width vw(172)
					height vw(45)
		&:before
			content ''
			position absolute
			width vh(152)
			height vh(40)
			transform translate(-50%, -50%)
			left 50%
			top 48%
			border 1px solid rgba(255,255,255,.7)
			background-color $t
			z-index -2
			transition width .6s, height .6s, background .6s
			will-change width, height
			@media $tovw
				width vw(152)
				height vw(40)